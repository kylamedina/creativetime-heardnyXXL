@keyframes bounceInDown 
	0% 
		opacity: 0;
		transform: translateY(-2000px);
	
	
	60% 
		opacity: 1;
		transform: translateY(30px);
	
	
	80% 
		transform: translateY(-50px);
	
	
	100% 
		transform: translateY(0);

@keyframes expandWidth
	0%
		width 0
	100%
		width 100%
	

object
	animation-name: bounceInDown
	animation-duration: 2s
svg
	cursor pointer
.grid
	span:nth-child(2) object
		animation-delay 0.1s
	span:nth-child(3) object
		animation-delay 0.2s
	span:nth-child(4) object
		animation-delay 0.3s
	span:nth-child(5) object
		animation-delay 0.5s
	span:nth-child(6) object
		animation-delay 0.6s
	span:nth-child(7) object
		animation-delay 0.7s
	span:nth-child(8) object
		animation-delay 0.8s
	span:nth-child(9) object
		animation-delay 0.9s
/*animation to show the footer, which will simply up its opacity to 1*/
@keyframes fadeIn
	0%
		opacity 0
	100%
		opacity 1
@keyframes slideLeft
	from
		margin-left 0

body, html
	background white

body
	width 100%
.frame
	padding-top 50px
	.creativetime
		width 5334px
		position relative
		margin-right -10% !important
	embed, object
		width 100%
		height 800px
		vertical-align: middle
		margin-top 20px
		g
			transition all 0.3s
			&:hover
				transition all 0.3s
	.nav
		width 100%
		background white
		position fixed
		bottom 0
		clearfix()
		z-index:9999
		.wrapper
			//position fixed
			left 0
			margin 0 30px
			padding 20px 0
			width 900px
			margin 0 auto



.grid
	clearfix()
	span
		width 633px
		display inline-block
	.vine, .twitter, .scaled-img
		display block

span
	&#I
		width 233px
	&#A
		width 660px



nav
	nav(true)
	display inline-block
	vertical-align middle

	li
		border 2px solid transparent
		border-radius 50%
		text-align center
		line-height 1.3
		animation: fadeIn 1s
		cursor pointer 

arrows()
	background-size 10px 39px

.arrow
	display inline-block
	size	11px 39px
	vertical-align middle
	&.left
		background url('assets/img/arrow_left.svg') no-repeat
		arrows()
		
	&.right
		background url('assets/img/arrow_right.svg') no-repeat
		arrows()
		margin-left 70px

.active
	border 2px solid pink
	border-radius 50%

::-webkit-scrollbar
	width: 7px
	height: 7px
	cursor: pointer

::-webkit-scrollbar-track
	background-color: #ddd
	border-radius: 10px

::-webkit-scrollbar-thumb
	border-radius: 10px
	background-color: pink

#overlay
	width 5334px
	height 100%
	min-height  850px
	display:none;
	background:rgba(0, 0, 0,0.5);
	position:absolute;
	z-index:999;
#popup  
	position:absolute;
	transform: scale(0,0);
	-ms-transform: scale(0,0);
	-webkit-transform: scale(0,0);
	width:auto;
	display:block;
	border:1px solid rgba(240, 83, 122,1);
	background:#fff
	padding:5px;
	box-shadow: 0 0 5px rgba(0,0,0,0.3);
	-webkit-border-radius: 3px;
	-moz-border-radius: 3px;
	border-radius: 3px; 
#close
	pointer-events:auto;

.scaled-img
	width auto
	height auto
	max-width 400px
	max-height 400px
	display block
.tweets
	display none

.meter
	height: 10px
	position: absolute
	width 400px
	background: #fff
	border-radius: 25px
	padding: 2px
	> span
		display: block;
		height: 100%;
		border-radius: 20px;
		background-color: pink
		position: relative;
		overflow: hidden
		animation-name: expandWidth
		animation-duration: 2s
		animation-iteration-count infinite

#tweets
	display:block;
	position:absolute;
	z-index:1000;
	top:0;
	opacity:0;
	pointer-events none
	&.importantRule
		pointer-events auto !important
.twitter-tweet-rendered
	max-height 450px !important
	border-radius 5px !important
	border none !important
	.cards-multimedia img
		max-height 250px !important
		max-width auto !important

#popup:hover .user, .user:hover
	opacity 1
	transition all 0.3s

.user
	position absolute
	right -210px
.profilepic
	width 65px
	height 65px

.username
	font-family $condensed
	font-weight 700
	text-decoration none
	padding-top 6px
	font-size 16px
	width 200px
	-ms-word-break: break-all;
	word-break: break-all;

	// Non standard for webkit
	word-break: break-word;

	-webkit-hyphens: auto;
	-moz-hyphens: auto;
	hyphens: auto;
	a
		color white
		text-decoration none
		text-transform uppercase
		&:hover
			color pink !important
.time
	font-family $sans-serif 
	font-size 14px
	margin-top 6px
	a
		text-decoration none !important
		color white !important
		border-bottom none
		transition all 0.3s
		&:hover
			color pink !important
			border-bottom 1px solid pink
			transition all 0.3s